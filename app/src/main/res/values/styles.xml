<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RedditTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/redditRed</item>
        <item name="android:background">@color/redditGrey</item>
        <item name="colorAccent">@color/redditAccent</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="FlickrTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/flickrBlue</item>
        <item name="android:background">@color/flickrAccent</item>
        <item name="colorAccent">@color/flickrPink</item>
    </style>

    <style name="GithubTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/gitBackground</item>
        <item name="android:background">@color/gitGreen</item>
        <item name="colorAccent">@color/gitAccent</item>
    </style>


    <style name="NewsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/newsText</item>
        <item name="android:background">@color/newsPrimary</item>
        <item name="colorAccent">@color/newsAccent</item>
    </style>

</resources>
