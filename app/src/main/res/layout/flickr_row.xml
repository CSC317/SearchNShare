<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="FlickrRowClick"
    style="@style/FlickrTheme"
    android:id="@+id/flickr_row">
    <!--    android:weightSum="5"-->
    <!--    android:onClick="showPreview"-->

    <TextView
        android:id="@+id/flickr_row_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#F10655"
        android:background="#0F0F0F"
        android:textSize="25dp"/>
    <!--        android:layout_weight="2"/>-->

    <ImageView
        android:id="@+id/flickr_row_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FlickrTheme"
        android:background="#0F0F0F"
        android:gravity="center"/>
    <!--        android:layout_weight="3"/>-->

    <TextView
        android:id="@+id/flickr_row_url"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        style="@style/FlickrTheme"
        android:textColor="#F10655"
        android:textSize="0dp"/>


</LinearLayout>
