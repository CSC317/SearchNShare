<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_outer"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Some of each!"
        android:textSize="30dp"
        android:gravity="center"
        android:id="@+id/all_title"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        style="@style/AppTheme"/>
    <!--        app:layout_constraintStart_toStartOf="@id/flickr_outer"-->
    <!--        app:layout_constraintTop_toTopOf="@id/flickr_outer"-->
    <!--        app:layout_constraintEnd_toEndOf="@id/flickr_outer"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Allsearch"
        android:weightSum="4"
        style="@style/AppTheme"
        android:background="@color/colorPrimary"
        >
        <!--        app:layout_constraintStart_toStartOf="@id/flickr_outer"-->
        <!--        app:layout_constraintTop_toBottomOf="@id/flickr_title"-->
        <!--        app:layout_constraintEnd_toEndOf="@id/flickr_outer">-->

        <EditText
            android:id="@+id/all_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            style="@style/AppTheme"/>

        <Button
            android:id="@+id/search_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SEARCH"
            android:textSize="15dp"
            android:onClick="showFragSearch"
            android:layout_weight="3"
            style="@style/AppTheme"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"/>
        <!--            android:onClick="showSearch"-->

    </LinearLayout>

    <ListView
        android:id="@+id/all_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:background="@color/colorPrimary"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        android:background="@color/colorPrimary"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/AppTheme"
        android:background="@color/colorPrimary"
        >


        <ListView
            android:id="@+id/all_reddit_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:background="@color/colorPrimary"
            />

        <ListView
            android:id="@+id/all_news_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:background="@color/colorPrimary"
            />

        <ListView
            android:id="@+id/all_flickr_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:background="@color/colorPrimary"
            />

        <ListView
            android:id="@+id/all_meme_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>
    </ScrollView>
