<!--        app:layout_constraintBottom_toBottomOf="@id/news_outer"-->
<!--        app:layout_constraintTop_toBottomOf="@id/Nsearch"/>-->

    <ListView
        android:id="@+id/article_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/news_outer"
        app:layout_constraintEnd_toEndOf="@id/news_outer"
        app:layout_constraintBottom_toBottomOf="@id/news_outer"
        app:layout_constraintTop_toBottomOf="@id/Nsearch"/>

